{
  
  "compilerOptions": {
    "target": "esnext",                          
    "module": "esnext",
    "moduleResolution": "node",                     
    "noEmitOnError": true,
    "lib": ["es2017"],                            
    "strict": true,  
    "esModuleInterop": false,                 

    "outDir": "dist/",
    
    "rootDir": "src",
    "baseUrl": "./",    
    
    "declaration": true,
    "declarationDir": "dist/types",
    
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

