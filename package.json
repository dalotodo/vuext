{
  "name": "@vuextnd/core",
  "version": "0.1.3",
  "description": "Provides feature extensions to VueX 4.x library",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "src",
    "dist/**/*.js",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "clean": "npm run clean:types & npm run clean:js",
    "clean:js": "rimraf dist",
    "clean:types": "rimraf types",
    "build": "npm run clean & npm run build:types & npm run build:js",    
    "build:js": "rollup -c rollup.config.js",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --skipLibCheck",
    "prepare": "npm run build",
    "prepublishOnly": "npm test ",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dalotodo/vuext.git"
  },
  "homepage": "https://github.com/dalotodo/vuext#readme",
  "keywords": [
    "vuex",
    "vue"
  ],
  "author": "Pablo PÃ©rez <@dalotodo>",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.2.20",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.2",
    "deepmerge": "^4.2.2",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.1",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  }
}
